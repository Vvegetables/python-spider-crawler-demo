#coding=utf-8


#初级装饰器
def simple_decorator(func):
    def wrapper():
        print "[DEBUG]:enter{}()".format(func.__name__)
        return func()
    return wrapper

def say_hello():
    print "hello"

say_hello = simple_decorator(say_hello)



#晋级

@simple_decorator
def say_hello2():
    print 'hello!'
    
#再次晋级，被装饰的函数带上参数
def middle_decorator(func):
    def wrapper(*args,**kwargs):
        print "[DEBUG]:enter{}()".format(func.__name__)
        print 'prepare and say...'
        return func(*args,**kwargs)
    return wrapper


